{
  "name": "slushy",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "husky": "3.0.0",
    "lerna": "3.15.0",
    "lint-staged": "^9.0.1",
    "prettier": "^1.18.2",
    "ts-node": "8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.5.3"
  },
  "scripts": {
    "example": "yarn example:gen && yarn example:start",
    "example:gen": "ts-node codegen/src/index.ts gen example/pet.yaml example/src/generated",
    "example:start": "ts-node example/src/index.ts",
    "build": "lerna run build --ignore @slushy/example && lerna run build --scope @slushy/example",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test",
    "lint": "lerna run lint"
  },
  "prettier": "./.prettierrc.json",
  "lint-staged": {
    "**/*.{ts,json}": [
      "prettier --write",
      "git add"
    ],
    "docs/**/*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
