{
  "name": "slushy",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/express": "4.17.0",
    "@types/fs-extra": "^8.0.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.15",
    "@types/lodash": "4.14.135",
    "@types/multer": "^1.3.7",
    "@types/mz": "0.0.32",
    "@types/node": "12.0.0",
    "@types/prettier": "1.16.4",
    "@types/supertest": "2.0.7",
    "@types/swagger-ui-express": "3.0.0",
    "@types/uuid": "3.4.4",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "lerna": "3.15.0",
    "lint-staged": "9.1.0",
    "openapi-types": "1.3.5",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "postinstall": "lerna exec yarn install",
    "example": "yarn example:gen && yarn example:start",
    "example:gen": "ts-node codegen/src/index.ts gen example/pet.yaml example/src/generated",
    "example:start": "ts-node example/src/index.ts",
    "build": "lerna run build --ignore @slushy/example && lerna run build --scope @slushy/example",
    "bootstrap": "lerna bootstrap --force-local",
    "test": "lerna run test",
    "lint": "lerna run lint"
  },
  "prettier": "./.prettierrc.json",
  "lint-staged": {
    "**/*.{ts,json}": [
      "prettier --write",
      "git add"
    ],
    "docs/**/*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@slushy/example": "file:example",
    "@slushy/server": "file:server"
  }
}
